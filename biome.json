{
	"$schema": "https://biomejs.dev/schemas/2.4.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"src/**/*.ts",
			"src/**/*.js",
			"e2e/**/*.ts",
			"*.ts",
			"*.js",
			"*.json"
		]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	},
	"assist": {
		"enabled": true
	}
}
